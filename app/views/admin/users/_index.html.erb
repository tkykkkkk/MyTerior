<table class="table">
  <thead>
    <tr class="table-secondary">
      <th>ユーザーID</th>
      <th></th>
      <th>ネーム</th>
      <th>email:</th>
      <th>ステータス</th>
    </tr>
  </thead>
  
  <tbody>
    <% users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td>
        <%= image_tag user.get_profile_photo, class: "post-profile-icon" %>
      </td>
      <td>
        <%= link_to admin_user_path(user.id), class: "text-green" do %>
          <%= user.name %>
        <% end %>
      </td>
      <td><%= user.email %></td>
      <td>
        <% if user.is_active %>
          <div class="text-success"><b>有効</b></div>
        <% else %>
          <div class="text-secondary"><b>退会</b></div>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>