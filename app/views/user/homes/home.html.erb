<div class="container">
    <div class="row">
     <aside class="col-md-3 col-12 h-100">
       <%= render 'user/users/info', user: current_user %>
     </aside>

    <main class="col-md-9 col-12 mx-auto">
      <div class="container">
        <h2>総合いいね数トップ10</h2>
          <div class="row">
            <table class="table table-hover table-inverse">
              <thead>
                <tr class="table-secondary">
                  <th></th>
                  <th></th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %> 
                <tr>
                  <td>
                    <%= image_tag user.get_profile_photo, class: "post-profile-icon" %>
                  </td>
                  <td>
                    <%= link_to user_path(user), class: "text-dark" do %>
                    <%= user.name %>
                    <% end %>
                  </td>
                  <td>
                    <%= user.favorites_count %>いいね
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
    </main>
  </div>
</div>
<hr>
<div class="container">
    <div class="row">
         <h2>新規投稿</h2>
         <% @posts.each do |post| %>
            <div class="col-md-3 col-sm-6 col-12">
              <div class="item" style="margin: 10px; border: none; border-radius: 5px; width: 100%;">
                <%= link_to(post_path(post)) do %>
                  <%= image_tag post.photos.first.image.url(:medium), class: "card-img-top" %>
                <% end %>
              </div>
            </div>
          <% end %>
    </div>
</div>