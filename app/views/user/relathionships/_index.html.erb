<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
            <%= link_to user_path(user), class: "no-text-decoration" do %>
            <%= image_tag user.get_profile_photo, class: "post-profile-icon" %>
            <% end %> 
        </td>
        <td><%= user.name %></td>
        <td>
            フォロー数: <%= user.followings.count %>
        </td>
        <td>
            フォロワー数: <%= user.followers.count %>
        </td>
        <td>
            <%= link_to "ユーザーページ", user_path(user), class: 'btn btn-primary mr-3'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>